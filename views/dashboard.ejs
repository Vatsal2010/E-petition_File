<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            color: #333;
        }
        header {
            background-color: #3452eb;
            color: white;
            padding: 1em;
            text-align: center;
        }
        #user-info, #projects {
            margin: 20px;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            border-bottom: 2px solid #3452eb;
            padding-bottom: 10px;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            margin: 10px 0;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            cursor: pointer;
        }
        li h3 {
            margin: 0;
        }
        li div {
            display: none;
            margin-top: 10px;
        }
        footer {
            text-align: center;
            margin: 20px;
        }
        button {
            padding: 10px 20px;
            margin: 10px;
            background-color: #3452eb;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #3452eb;
        }
    </style>
    <script>
        function toggleProjectDetails(id) {
            const projectDetails = document.getElementById(id);
            if (projectDetails.style.display === 'none' || projectDetails.style.display === '') {
                projectDetails.style.display = 'block';
            } else {
                projectDetails.style.display = 'none';
            }
        }
    </script>
</head>
<body>
    <header>
        <h1>Welcome, <%= user.firstName %> <%= user.lastName %>!</h1>
    </header>

    <section id="user-info">
        <h2>User Information</h2>
        <p><strong>Customer ID:</strong> <%= user.customerId %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Username:</strong> <%= user.username %></p>
        <p><strong>Subscription Status:</strong> <%= user.subscriptionStatus %></p>
    </section>

    <section id="projects">
        <h2>Your Petitions</h2>
        <% if (user.projects.length > 0) { %>
            <ul>
                <% user.projects.forEach(function(project, index) { %>
                    <li onclick="toggleProjectDetails('project-<%= index %>')">
                        <h3><%= project.title %></h3>
                        <div id="project-<%= index %>">
                            <p><strong>Category:</strong> <%= project.category %></p>
                            <p><strong>Date:</strong> <%= new Date(project.date).toLocaleDateString() %></p>
                            <p><strong>Description:</strong> <%= project.description %></p>
                            <p><strong>URL:</strong> <a href="<%= project.url %>" target="_blank"><%= project.url %></a></p>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No Petitions found.</p>
        <% } %>
    </section>

    <footer>
        <button onclick="window.location.href='/'">Home</button>
        <button onclick="window.location.href='/upload'">Create Petition</button>
    </footer>
</body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/static/css/style.css">
  <script async src="https://kit.fontawesome.com/20970c5fb1.js" crossorigin="anonymous"></script>
  <title>Blog</title>
</head>

<body style="background-color: #f5f7fa; color: #333; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin: 0; padding: 0;">
  <%- include("partials/primaryHeader.ejs") %>

  <h1 style="font-size: 3rem; text-align: center; margin: 20px 0; color: #007BFF; text-transform: uppercase; letter-spacing: 3px;">Petition Categories</h1>

  <form id="filter-form" class="filter-form" action="/blog/filter" method="get" style="display: none; margin: 20px auto; padding: 20px; background-color: #f9f9f9; border: 1px solid #ccc; border-radius: 20px; width: 60%; max-width: 600px;">
    <label for="category" style="display: block; margin-bottom: 10px; font-weight: bold;">Category:</label>
    <input type="text" id="category" name="category" style="width: calc(100% - 20px); padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 10px; box-sizing: border-box;">
    <label for="user" style="display: block; margin-bottom: 10px; font-weight: bold;">User:</label>
    <input type="text" id="user" name="user" style="width: calc(100% - 20px); padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 10px; box-sizing: border-box;">
    <label for="title" style="display: block; margin-bottom: 10px; font-weight: bold;">Title:</label>
    <input type="text" id="title" name="title" style="width: calc(100% - 20px); padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 10px; box-sizing: border-box;">
    <button type="button" onclick="submitFilterForm()" style="background-color: #36d1dc; color: white; border: none; padding: 12px 20px; font-size: 16px; cursor: pointer; border-radius: 10px; transition: all 0.3s ease;">Submit</button>
  </form>

  <% blogs.forEach(blog => { %>
    <h2 class="text-4xl mt-8 font-semibold text-center" style="background-color: #007BFF; color:white; padding: 5px;">Category: <%= blog.category %></h2>
    <div class="grid gap-12 m-12 grid-cols-1 md:grid-cols-2 xl:grid-cols-3">
      <% blog.projects.forEach(project => { %>
        <% if (project.status !== 'pending') { %>
          <div class="card" style="background: #ffffff; border-radius: 20px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1); overflow: hidden; transition: all 0.3s ease; padding: 20px; margin-bottom: 20px;">
            <div class="card-content">
              <% if (project.images && project.images.length > 0) { %>
                <div class="image-gallery" style="display: flex; justify-content: center; flex-wrap: wrap;">
                  <% project.images.forEach(image => { %>
                    <img src="<%= image %>" alt="Project Image" style="width: 150px; height: 150px; object-fit: cover; margin: 5px; border-radius: 10px;">
                  <% }); %>
                </div>
              <% } else { %>
                <p>No images available for this project.</p>
              <% } %>
              <button class="enroll-button" onclick="enrollpetition('<%= project._id %>')" style="background: linear-gradient(135deg, #ff416c, #ff4b2b); color: white; border: none; padding: 12px 30px; font-size: 16px; cursor: pointer; border-radius: 30px; transition: all 0.3s ease;">Enroll</button>
              <p class="text-center text-sm text-gray-100 bg-gray-800 rounded-md py-1 mb-2">Users Enrolled: <%= project.usersEnrolled.length %></p>
              <div class="card-details">
                Creator: <%= project.User %> <br>
                Title: <%= project.title %><br>
                Dated: <%= project.date %> <br>
              </div>
              <a href="https://api.whatsapp.com/send?text=Check out this petition: <%= project.title %> - <%= project.description.substring(0, 100) %> Enroll at https://bharatkenagrik.com/blog" 
                class="whatsapp-share-button" 
                target="_blank" 
                style="display: inline-block; margin-top: 2px; background:#ff416c; color: white; padding: 2px 4px; border-radius: 2px; text-decoration: none;">
                Share
              </a>
              <div id="<%= project._id %>" class="description short-description" style="display: block; max-height: 60px; overflow: hidden; text-overflow: ellipsis; transition: max-height 0.5s ease;">
                <p>Description: <span class="highlight"><%= project.description %></span></p>
              </div>
              <span id="toggle-<%= project._id %>" class="toggle-description" onclick="toggleDescription('<%= project._id %>')" style="color: #007BFF; cursor: pointer; font-weight: bold; margin-top: 10px; transition: color 0.3s ease;">View More</span>
            </div>
          </div>
        <% } %>
      <% }) %>
    </div>
  <% }) %>
  <script>
    async function enrollpetition(id) {
      const projectId = document.getElementById(id);
      window.location.href = `/upload/${id}`;
    }
    document.querySelectorAll('.enroll-button').forEach(button => {
      button.addEventListener('click', async function() {
        const projectId = this.getAttribute('data-project-id');
        const formData = new FormData();
        formData.append('signedPdf', document.querySelector('#pdfInput').files[0]); // Assuming you have a file input for the PDF
        formData.append('projectId', projectId); // Include projectId in the form data
        window.location.href = '/upload';
        try {
          const response = await fetch('/upload-pdf', {
            method: 'POST',
            body: formData
          });

          if (response.ok) {
            // Handle successful upload and enrollment
            alert("You are enrolled");
          } else {
            alert("Something went wrong");
          }
        } catch (error) {
          alert("An error occurred during the process.");
        }
      });
    });
    function toggleDescription(id) {
      const description = document.getElementById(id);
      const viewMoreLink = document.getElementById('toggle-' + id);

      if (description.classList.contains('full-description')) {
        description.classList.remove('full-description');
        viewMoreLink.innerText = 'View More';
      } else {
        description.classList.add('full-description');
        viewMoreLink.innerText = 'View Less';
      }
    }

    function toggleFilterForm() {
      var form = document.getElementById('filter-form');
      if (form.style.display === "none") {
        form.style.display = "block";
      } else {
        form.style.display = "none";
      }
    }

    function submitFilterForm() {
      var form = document.getElementById('filter-form');
      form.submit();
    }
  </script>
</body>

</html>
